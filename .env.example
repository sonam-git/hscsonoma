# Himalayan Sherpa Club of Sonoma Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# STORYBLOK CMS
# ===========================================
# Get these from your Storyblok space settings
STORYBLOK_API_TOKEN=your_storyblok_api_token_here
STORYBLOK_PREVIEW_TOKEN=your_storyblok_preview_token_here
NEXT_PUBLIC_STORYBLOK_API_TOKEN=your_storyblok_public_token_here

# ===========================================
# SENDGRID EMAIL
# ===========================================
# Create an API key at https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email addresses for form submissions
FROM_EMAIL=noreply@himalayansherpaclubsonoma.org
ADMIN_EMAIL=info@himalayansherpaclubsonoma.org

# ===========================================
# SITE CONFIGURATION
# ===========================================
# Public site URL for SEO, sitemap, and meta tags
SITE_URL=https://www.himalayansherpaclubsonoma.org
NEXT_PUBLIC_SITE_URL=https://www.himalayansherpaclubsonoma.org

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================
# Google Analytics ID (if using)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# OPTIONAL: SOCIAL MEDIA
# ===========================================
NEXT_PUBLIC_FACEBOOK_URL=https://www.facebook.com/himalayansherpaclubsonoma
NEXT_PUBLIC_INSTAGRAM_URL=https://www.instagram.com/hscssonoma
